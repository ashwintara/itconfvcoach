<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/hfimageIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:adjustViewBounds="true"
        android:background="@drawable/notachieved"
        android:cropToPadding="true" />
    <TextView
        android:id="@+id/hftextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true">
</TextView>
    <TextView
        android:id="@+id/hftextView2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp"
        android:layout_below="@+id/hftextView1"
        android:layout_marginTop="11dp" />


    <TextView
        android:id="@+id/hftextView3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/hftextView2"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/healthyfoodActivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/hftextView2"
        android:text="Activate" />

</RelativeLayout>