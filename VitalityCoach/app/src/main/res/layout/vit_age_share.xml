<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vcoach.example.com.vitalitycoach.VitalityAgeActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/challenges_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?android:attr/colorFocusedHighlight"
        android:elevation="4dp"
        android:theme="@style/Base.Theme.AppCompat.Light"
        android:title="@string/app_name"
        android:titleTextColor="@color/cardview_light_background"
        android:visibility="visible"
        app:popupTheme="@mipmap/coach"
        app:title="VITALITY COACH"
        android:layout_gravity="center"
        tools:background="?android:attr/colorFocusedHighlight"
        tools:titleTextColor="@color/cardview_light_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="13dp"
        android:fontFamily="sans-serif"
        android:paddingTop="5dp"
        android:text=" Vitality Age"
        android:textAppearance="@style/SettingCodeFontBold"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintLeft_toRightOf="@+id/imageView13"
        app:layout_constraintRight_toRightOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/challenges_toolbar"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="53dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        app:layout_constraintLeft_toLeftOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/challenges_toolbar"
        app:srcCompat="@drawable/heart_trophy"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/appbg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="TextView"
        tools:text="@string/text_with_vitage"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView16" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="116dp"
        android:layout_height="107dp"
        android:focusable="true"
        android:onClick="startVitalityAgeVideo"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/heart_trophy"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.159"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/fbshare"
        app:layout_constraintTop_toBottomOf="@+id/fbshare"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/myCoordinatorLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Here are the existing layout elements, now wrapped in
             a CoordinatorLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- …Toolbar, other layouts, other elements… -->

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="342dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/text_congrats_vitage"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/fbshare"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginBottom="11dp" />

    <ImageButton
        android:id="@+id/fbshare"
        android:layout_width="133dp"
        android:layout_height="54dp"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:elevation="24dp"
        android:onClick="shareFB"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/fb_share"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        android:layout_marginTop="142dp"
        app:layout_constraintTop_toBottomOf="@+id/challenges_toolbar"
        android:layout_marginBottom="141dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton3"
        android:layout_marginLeft="10dp" />

    <RatingBar
        android:id="@+id/ratingBar2"
        style = "?android:attr/ratingBarStyleSmall"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:numStars = "5"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton3"
        android:layout_marginEnd="7dp"
        app:layout_constraintRight_toRightOf="@+id/fbshare"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        android:layout_marginBottom="23dp"
        app:layout_constraintLeft_toLeftOf="@+id/fbshare"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="325dp"
        android:layout_height="0dp"
        android:text="Rate your member journey during Vitality Age."
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginEnd="25dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="174dp"
        android:onClick="backToChallenges"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/textView27"
        app:layout_constraintRight_toRightOf="@+id/textView27"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:text="BACK" />

</android.support.constraint.ConstraintLayout>